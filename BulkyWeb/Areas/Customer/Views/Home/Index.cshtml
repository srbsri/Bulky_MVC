@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .bannerFont {
        font-family: 'Nunito', sans-serif;
        /*text-shadow: 2px 2px #F1DB70;*/
        text-shadow: 1px 1px #233eb3;
        color: #ffd400;
    }

    .bannerFont1 {
        xxx-large font-family: 'Nunito', sans-serif;
        text-shadow: 2px 2px #000000;
        color: red;
    }

    .bannerFont2 {
        font-family: 'Nunito', sans-serif;
        text-shadow: 2px 2px #000000;
        color: #d0dcef;
    }

    .bannerFont3 {
        font-family: 'Nunito', sans-serif;
        text-shadow: 2px 2px #000000;
        color: #ffd400;
    }

    .bannerFont4 {
        font-family: 'Nunito', sans-serif;
        text-shadow: 2px 2px #000000;
        color: green;
    }
</style>
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slider/1.png" class="" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="bannerFont1">The Book Shelf eStore</h1>
                <h3 class="bannerFont3">Opening doors to endless worlds..</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider/2.png" class="" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="bannerFont2">The Book Shelf eStore</h1>
                <h3 class="bannerFont1">Explore the pages of imagination.</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider/3.png" class="" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="bannerFont3">The Book Shelf eStore</h1>
                <h3 class="bannerFont2">Order Book in bulk & get huge discount</h3>
            </div>
        </div>
    </div>
</div>
<div class="text-center" style="padding-top:30px">
    <h1 class="bannerFont4" style="">Available Books</h1>
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center mb-0">
                                        List Price:
                                        <span class="text-decoration-line-through">
                                            @product.ListPrice.ToString("c")
                                        </span>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        As low as:
                                        <span>
                                            @product.Price100.ToString("c")
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details"
                                asp-route-productId="@product.Id"
                                    class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>